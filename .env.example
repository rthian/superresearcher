# SuperResearcher Configuration
# Copy this file to .env and fill in your values

# ============================================
# NOTION INTEGRATION (Optional)
# ============================================

# Your Notion Internal Integration Token
# Get it from: https://www.notion.so/my-integrations
NOTION_API_KEY=secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Database IDs from your Notion workspace
# Find these in the database URL: notion.so/{workspace}/{database_id}?v=...

# Research Studies Database
NOTION_STUDIES_DATABASE_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Customer Insights Database
NOTION_INSIGHTS_DATABASE_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Action Items Database
NOTION_ACTIONS_DATABASE_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Customer Personas Database
NOTION_PERSONAS_DATABASE_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# ============================================
# SELF-SERVE ACCESS CONTROL (Optional)
# ============================================

# Auth mode: "disabled" (default, no auth) or "token" (enable token auth)
AUTH_MODE=disabled

# Admin token (full read/write access - for insights team)
AUTH_ADMIN_TOKEN=your-admin-token-here

# Viewer token (read-only access - for pilot users: PMs, design leads)
AUTH_VIEWER_TOKEN=your-viewer-token-here

# ============================================
# TELEMETRY (Optional)
# ============================================

# Disable anonymous usage analytics
# Set to 0 to opt out
SUPERRESEARCHER_TELEMETRY=1
